{
  "name": "msscs-client",
  "version": "1.0.0",
  "description": "MSSCS v4.0 Desktop Client",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "build:check": "vue-tsc && vite build",
    "preview": "vite preview",
    "tauri": "tauri",
    "tauri:dev": "tauri dev",
    "tauri:build": "tauri build",
    "build:linux": "pnpm build && tauri build --target x86_64-unknown-linux-gnu",
    "build:windows": "pnpm build && tauri build --target x86_64-pc-windows-msvc",
    "build:linux:appimage": "pnpm build && tauri build --target x86_64-unknown-linux-gnu -- --appimage",
    "build:windows:nsis": "pnpm build && tauri build --target x86_64-pc-windows-msvc -- --nsis",
    "build:all": "pnpm build && tauri build --target all"
  },
  "packageManager": "pnpm@8.0.0",
  "dependencies": {
    "vue": "^3.4.0",
    "@tauri-apps/api": "^1.5.0",
    "pinia": "^2.1.7",
    "vue-router": "^4.2.5",
    "peerjs": "^1.5.2"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^1.5.0",
    "@vitejs/plugin-vue": "^5.0.0",
    "typescript": "^5.3.0",
    "vite": "^5.0.0",
    "vue-tsc": "^1.8.27"
  }
}
