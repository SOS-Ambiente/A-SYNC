{
  "name": "msscs-workspace",
  "version": "4.0.0",
  "description": "MSSCS v4.0 - Multi-State Chain-based Secure Storage",
  "type": "module",
  "scripts": {
    "dev": "pnpm --filter msscs-client dev",
    "web:dev": "pnpm --filter msscs-web dev",
    "web:build": "pnpm --filter msscs-web build",
    "mobile:dev": "pnpm --filter msscs-mobile android:dev",
    "build:windows": "pnpm --filter msscs-client build:windows",
    "build:linux": "pnpm --filter msscs-client build:linux",
    "build:android": "pnpm --filter msscs-mobile android:build:apk",
    "build:web": "pnpm --filter msscs-web build",
    "build:server": "cargo build --release --package msscs_v4",
    "build:all": "pnpm build:windows && pnpm build:linux && pnpm build:android && pnpm build:web && pnpm build:server",
    "server:dev": "cargo run --package msscs_v4",
    "server:build": "cargo build --release --package msscs_v4",
    "clean": "pnpm --filter msscs-client clean && cargo clean",
    "install:all": "pnpm install -r",
    "test": "cargo test --workspace"
  },
  "packageManager": "pnpm@8.0.0",

  "keywords": [
    "p2p",
    "storage",
    "blockchain",
    "distributed",
    "tor-like",
    "compression",
    "quantum",
    "cryptography"
  ],
  "author": "MSSCS Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/msscs/msscs-v4"
  },
  "engines": {
    "node": ">=18.0.0",
    "pnpm": ">=8.0.0"
  }
}